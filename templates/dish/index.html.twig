{% extends 'base.html.twig' %}

{% block title %}Show Dish{% endblock %}

{% block body %}
<div class="container">
    <h2>Show Dish</h2>
    <br>
    <table class="table table-stripped">
        <thead>
         <tr>
            <td>Order No</td>
            <td>Name</td>
            <td>Description</td>
         </tr>
        </thead>
        <tbody>
        {% for dish in dishes%}
            <tr>
                <td>{{dish.id}}</td>
                <td>{{dish.name}}</td>
                <td>{{dish.description}}</td>
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>
{% endblock %}
